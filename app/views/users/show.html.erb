<div class ="container px-5 px-sm-0">
  <div class="row">
    <%= render'list',user:@user,book:@book %>

    <p><%=link_to "フォロー", follows_user_path(@user.id) %></p>
    <p><%=link_to "フォロワー", followers_user_path(@user.id) %></p>
    <% if current_user != @user %>
      <% if @user.followed_by?(current_user) %>
        <p><%=link_to "フォロー済み", user_relationships_path(@user.id), method: :delete %></p>
      <% else %>
        <p><%=link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
      <% end %>
    <% end %>

    <div class ="col-md-8 offset-md-1">

      <h2>Books</h2>

      <table class ="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan=3></th>
          </tr>
        </thead>

       <% @user_book.each do|book| %>
        <tbody>
          <tr>

           <td>
             <%=link_to user_path(book.user.id) do %>
             <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
             <% end %>
           </td>

           <td>
             <%=link_to book_path(book.id) do %>
             <%=book.title %>
             <% end %>
           </td>

           <td>
             <%= book.body %>
           </td>

           <% if current_user.liked_by?(book.id) %>
             <td>
               <%= link_to "#{book.favorites.count}",book_favorites_path(book), {method: :delete , class:"fas fa-heart"}  %>
             </td>
           <% else %>
             <td>
               <%= link_to "#{book.favorites.count}", book_favorites_path(book), {method: :post , class:"far fa-heart"} %>
             </td>
           <% end %>
           <td class ='example'>
             <span>コメント数：<%= book.book_comments.count %></span>
           </td>
           </tr>
        </tbody>
       <% end %>
      </table>
    </div>
  </div>
</div>