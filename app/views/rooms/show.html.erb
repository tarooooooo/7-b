<div class="left-button">
  <%= link_to "ユーザー一覧に戻る" , users_path , class:"edit-link"%>
</div>

<h1>○◯さんとのチャット</h1>

<% @entries.each do |e| %>
  <div class="user_name">
    <strong>
      <%= e.user.name %>さん
    </strong>
  </div>
<% end %>

<div class="chats">
  <div class="chat">  
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <div class="chat-box">
        <strong><%= m.massage %></strong>
      </div>
    <% end %>
  <% end %>
  </div>
  <div class="posts">
    <%= form_with @message do |f| %>
      <%= f.text_field :message , placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "投稿" , class: 'form-submit' %>
    <% end %>
  </div>
</div>
